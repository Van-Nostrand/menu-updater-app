{
  "verbose": true,
  "ignore": [
    "dist",
    "node_modules",
    ".git",
    "**/*.test.js"
  ],
  "ext": "js,ts,scss,ejs",
  "env": {
    "NODE_ENV": "development"
  },
  "watch": [
    "handlers",
    "middleware",
    "models",
    "routes",
    "scss",
    "views",
    "./index.js"
  ],
  "execMap": {
    "ts": "ts-node"
  },
  "events": {
    "restart": "sass scss/index.scss:public/index.css"
  }
}

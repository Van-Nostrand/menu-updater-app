{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./*"]
    },
    "sourceMap": true,
    "target":"ESNext"
  },
  "exclude": [
    "./dist/**/*",
    "./node_modules/**/*",
    "./.husky/**/*",
    "./uploads/**/*",
    "./views/**/*",
    "./scss/**/*",
    "./.prettierrc.js",
    "./ecosystem.config.js"
  ],
  "include": [
    "./handlers/**/*",
    "./middleware/**/*",
    "./models/**/*",
    "./routes/**/*",
    "./util/**/*",
  ]
}
